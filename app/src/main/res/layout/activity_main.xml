<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#84afd1ff">

    <TextView
        android:textStyle="italic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:text="@string/Header"
        android:id="@+id/Header"
        android:gravity="center"
        />

    <Button
        style="@style/MyButtonStyle"
        android:text="@string/Spotify_Streamer"
        android:id="@+id/Spotify_Streamer_btn"
        android:layout_below="@+id/Header"
        android:onClick="SpotifyStreamerClick"/>

    <Button
        style="@style/MyButtonStyle"
        android:text="@string/Football_Scores"
        android:id="@+id/Football_Scores"
        android:layout_below="@+id/Spotify_Streamer_btn"
        android:onClick="FootballScoresClick"/>

    <Button
        style="@style/MyButtonStyle"
        android:text="@string/Library_App"
        android:id="@+id/Library_App"
        android:layout_below="@+id/Football_Scores"
        android:onClick="LibraryAppClick"/>

    <Button
        style="@style/MyButtonStyle"
        android:text="@string/Build_It_Bigger"
        android:id="@+id/Build_It_Bigger"
        android:layout_below="@+id/Library_App"
        android:onClick="BuildItBiggerClick"/>

    <Button
        style="@style/MyButtonStyle"
        android:text="@string/XYZ_Reader"
        android:id="@+id/XYZ_Reader"
        android:layout_below="@+id/Build_It_Bigger"
        android:onClick="XYZReaderClick"/>

    <Button
        style="@style/MyButtonStyle"
        android:text="@string/Capstone"
        android:id="@+id/Capstone"
        android:layout_below="@+id/XYZ_Reader"
        android:onClick="CapstoneClick"
        android:background="#ffff6134" />

</RelativeLayout>
